{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false
  },
  "include": [
    "next-env.d.ts", 
    "types/**/*.d.ts",
    "app/**/*.ts", 
    "app/**/*.tsx",
    "components/**/*.ts", 
    "components/**/*.tsx",
    "lib/**/*.ts", 
    "lib/**/*.tsx",
    "hooks/**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    ".next/**/*", 
    "out/**/*",
    "build/**/*"
  ]
}
